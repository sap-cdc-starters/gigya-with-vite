{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
     
    "noPropertyAccessFromIndexSignature": false,
    /* Path */

    "paths": {
      "@auth/*": ["./src/auth/*"],
      "@auth": ["./src/auth/index"],
      "@google/*": ["./src/google/*"],
      "@google": ["./src/google/index"],
      "@gigya/*": ["./src/gigya-service/*"],
      "@gigya": ["./src/gigya-service/index"]
    }
  },
  "include": ["src/**/*"]
}
